<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".ProfileActivity">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
    android:contentDescription="Profile Image"
        android:background="@drawable/image"
        android:scaleType="centerCrop"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="70dp"/>

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        app:layout_constraintTop_toBottomOf="@id/profile"
        android:background="@drawable/profile_button"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp"/>

    <!-- Find Library Button -->
    <Button
        android:id="@+id/btnFindLibrary"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Find Library"
        app:layout_constraintTop_toBottomOf="@id/btnEditProfile"
        android:background="@drawable/profile_button"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- FAQs Button -->
    <Button
        android:id="@+id/btnFAQs"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="FAQs"
        app:layout_constraintTop_toBottomOf="@id/btnFindLibrary"
        android:background="@drawable/profile_button"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Support and Feedback Button -->
    <Button
        android:id="@+id/btnSupportFeedback"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Support and Feedback"
        app:layout_constraintTop_toBottomOf="@id/btnFAQs"
        android:background="@drawable/profile_button"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Log out"
        app:layout_constraintTop_toBottomOf="@id/btnSupportFeedback"
        android:background="@drawable/logout_button"
        android:textColor="@color/red_logout"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="logoutUser"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"/>

</androidx.constraintlayout.widget.ConstraintLayout>
