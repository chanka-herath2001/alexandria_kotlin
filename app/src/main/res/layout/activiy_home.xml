<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".MainActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/homeLogo"
        android:layout_width="300dp"
        android:layout_height="51.4dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/lognobackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="300dp"
        android:layout_height="59dp"
        android:hint="Search"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingStart="25dp"
        android:background="@drawable/rounded_search_bar"
        android:textColorHint="@color/light_purple"
        app:layout_constraintTop_toBottomOf="@id/homeLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <!-- Categories -->
    <LinearLayout
        android:id="@+id/categoriesLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp">

        <!-- Category 1 -->
        <TextView
            android:id="@+id/category1Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="All"
            android:textColor="@color/light_blue"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!-- Category 3 -->
        <TextView
            android:id="@+id/category2Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fantasy"
            android:textColor="@color/light_blue"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category3Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sci-Fi"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/light_blue"/>

        <!-- Category 4 -->
        <TextView
            android:id="@+id/category4Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Romance"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/light_blue"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/categoriesLayout" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
